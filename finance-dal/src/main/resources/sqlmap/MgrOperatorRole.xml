    <update id="updateById"  parameterType="MgrOperatorRoleDo">
        UPDATE mgr_operator_role
          <set>
            <if test="creator != null">        
                creator = #{creator,jdbcType=VARCHAR},
            </if>
            <if test="modifier != null">        
                modifier = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="operatorId != null">        
                operator_id = #{operatorId,jdbcType=INTEGER},
            </if>
            <if test="roleId != null">        
                role_id = #{roleId,jdbcType=INTEGER},
            </if>
            <if test="roleType != null">        
                role_type = #{roleType,jdbcType=INTEGER},
            </if>
            gmt_modified = NOW()
        </set>    
        WHERE is_delete = 0 AND id = #{rid ,jdbcType=BIGINT}
    </update>

	<select id="getById" resultType="MgrOperatorRoleDo">
        SELECT
        <include refid="queryFields" />
        FROM mgr_operator_role
        WHERE is_delete = 0 AND id=#{rid ,jdbcType=BIGINT}
        LIMIT 0,1
    </select>

    <select id="getByOperatorId" resultType="MgrOperatorRoleDo">
        SELECT
        <include refid="queryFields" />
        FROM mgr_operator_role
        WHERE is_delete = 0 AND operator_id = #{operatorId}
